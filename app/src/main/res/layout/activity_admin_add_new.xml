<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AdminAddNewActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_700"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="Add New Products"
        app:titleMarginStart="10dp" />
    <EditText
        android:id="@+id/admin_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/toolbar1"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:hint="Enter Product Name"
        android:inputType="text"
        android:textSize="22dp"
        android:layout_margin="10dp"/>
    <Spinner
        android:id="@+id/admin_type"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/admin_name"
        android:backgroundTint="@color/cardview_shadow_start_color"
        android:spinnerMode="dropdown"
        android:layout_margin="10dp"
        android:gravity="center"

        />

    <EditText
        android:id="@+id/admin_price"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/admin_type"
        android:layout_marginTop="20dp"
        android:hint="Product Price"
        android:inputType="text"
        android:textSize="22dp"/>


    <EditText
        android:id="@+id/admin_des"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/admin_price"
        android:layout_marginTop="20dp"
        android:hint="Product Description"
        android:inputType="text"
        android:textSize="22dp"/>


    <EditText
        android:id="@+id/admin_rat"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/admin_des"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="37dp"
        android:hint="Product Ratings"
        android:inputType="text"
        android:textSize="22dp" />

    <Button
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/admin_rat"
        android:layout_marginTop="3dp"
        android:text="Select File from your Device" />

    <ImageView
        android:id="@+id/imgc"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_below="@id/btn"
        android:layout_alignBottom="@+id/btn2"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="72dp"
        android:src="@drawable/ic_menu_manage" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Upload Product"
        android:textColor="@color/white"
        android:background="#DD3535"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"/>



</RelativeLayout>